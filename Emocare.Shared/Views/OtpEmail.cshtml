@model Emocare.Application.DTOs.Common.OtpEmailDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>OTP Email</title>
</head>
<body style="font-family: Arial, sans-serif; background-color: #f8f8f8; padding: 20px;">
    <div style="max-width: 600px; margin: auto; background-color: white; padding: 30px; border-radius: 8px;">
        <h2 style="text-align: center; color: #4CAF50;">Emocare Verification Code</h2>

        <p>Hello @Model.Name,</p>
        <p>Your one-time password is:</p>

        <h1 style="text-align: center; font-size: 36px; color: #333;">@Model.Otp</h1>

        <p style="text-align: center; color: gray;">Valid for 5 minutes.</p>
        <hr />
        <p>If you didn’t request this, you can safely ignore it.</p>
        <p>Thanks,<br /><strong>Emocare Team</strong></p>
    </div>
</body>
</html>
